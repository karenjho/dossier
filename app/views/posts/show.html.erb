<h1><%= @post.title %></h1>
<div class="links">
  <%= link_to "All posts", posts_path %> | <%= link_to "Edit this post", edit_post_path(@post) %> | <%= link_to "Delete this post", @post, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
</div>
<div class="picture">
  <p>
    <%= image_tag(@post.picture_url) %>
  </p>
</div>
<div class="body">
  <p>
    <%= @post.body %>
  </p>
</div>
