<h1>Profile page for <%= @user.username %></h1>
<div class="links">
  <%= link_to "All posts", posts_path %> | <%= link_to "Edit user information", edit_user_path(@user) %> | <%= link_to "Delete user (PERMANENT)", @user, method: :delete, data: {confirm: "Are you sure you want to delete this user? This deletion is permanent and cannot be reversed."} %>
</div>
<div class="profile">
  <p>
    Email: <%= @user.email %>
  </p>
</div>
