<%= form_for @user do |f| %>

  <% render "errors" %>

  <div class="field">
    <%= f.label :username, "Username (optional)" %><br>
    <%= f.text_field :username %>
    <p>
      Username is used as your alias on Dossier. If you do not enter a username, your email address will show as the author on posts and comments.
    </p>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Save user" %>
  </div>

<% end %>
